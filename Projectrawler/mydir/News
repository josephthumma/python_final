R AFTER COVID <li><a href="/admissions/undergraduate/visit/open-house/index.php">Open Houses</a></li>\n                        <li><a href="/admissions/undergraduate/visit/info-sessions/">Info Sessions and Campus Tours</a></li>\n                        <li><a href="/admissions/undergraduate/visit/info-sessions/group.php">Group Visits</a></li>\n\t\t\t\t\t\t<li><a href="/admissions/undergraduate/visit/transfer/">Transfer Events</a></li>\n                        <li><a href="/admissions/undergraduate/visit/virtual.php">Virtual Tour</a></li>\n                        <li><a href="/admissions/undergraduate/visit/">All Visit Opportunities</a></li> -->\n                    </ul>\n                </nav><!-- /#undergraduate-nav -->\n\n                <nav id="graduate-nav" role="navigation">\n                    <h5 class="nav-subtitle">Graduate</h5>\n                    <ul class="menu">\n                        <li><a href="/admissions/graduate/events/">Information Sessions</a></li>\n                        <li><a href="/admissions/graduate/events/open-house.php">Open Houses</a></li>\n\t\t\t\t\t\t<li><a href="/admissions/undergraduate/visit/virtual.php">Virtual Tour</a></li>\n                        <li><a href="/admissions/graduate/events/">All Visit Opportunities</a></li>\n                    </ul>\n                </nav><!-- /#graduate-nav -->\n            </div><!-- /#right-nav-wrapper -->\n\n        </div><!-- /.snippet-body -->\n\n    </div><!-- /.container -->\n</div><!-- /#visit-menu -->\n<header id="site-header" role="banner">\n\n\t<div class="container">\n\t\t\n\t\t<div id="wordmark">\n\t\t\t\n\n<a href="/" title="University of New Haven">\n\t\t\t\t<span class="sr-only">University of New Haven</span>\n\t\t\t</a>\n\t\t</div><!-- /#site-logo -->\n\n\t\t<div id="navband">\n\t\t\t<a href="javascript:void(0);" id="megamenu-toggle" aria-label="Toggle main menu" class="menu-toggle" role="button">\n\t\t\t\t<span class="toggle-icon"></span>\n\t\t\t\t<span class="label">Mai